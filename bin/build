#!/usr/bin/env php
<?php

$readonly = boolval(ini_get('phar.readonly'));
if ($readonly) {
  echo 'Cannot build Phar when readonly flag is set!';
  exit(1);
}

$rootdir = realpath(__DIR__ . '/..');
$iteratorOf = function(string $folder) use ($rootdir): Iterator {
  return new RecursiveIteratorIterator(new RecursiveDirectoryIterator($rootdir . $folder));
};

$phar = new Phar("{$rootdir}/calendar.phar");
$phar->setDefaultStub('index.php');

$phar->buildFromIterator($iteratorOf('/vendor'), $rootdir);
$phar->buildFromIterator($iteratorOf('/src'), $rootdir);

$phar->addFromString('index.php', <<<EOF
<?php
require_once __DIR__ . '/vendor/autoload.php';
CalDAV\Server::run();
?>
EOF);

$phar->convertToExecutable(Phar::TAR, Phar::GZ, '.phar.tgz');

?>
